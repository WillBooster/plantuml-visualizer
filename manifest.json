{
  "manifest_version": 2,

  "name": "PlantUML Visualizer",
  "description": "A tool for visualizing PlantUML code.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "permissions": ["activeTab", "tabs"],

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["main.js"]
    }
  ]
}
