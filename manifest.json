{
  "manifest_version": 2,
  "name": "PlantUML Visualizer",
  "description": "A tool for visualizing PlantUML code.",
  "version": "1.1.6",
  "browser_action": {
    "default_icon": "icon/icon16.png"
  },
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "https://github.com/*",
    "*://*/*.puml",
    "*://*/*.pu",
    "*://*/*.plantuml"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*", "*://*/*.puml", "*://*/*.pu", "*://*/*.plantuml"],
      "js": ["content_scripts.js"]
    }
  ]
}
